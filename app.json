{
  "name": "wheel",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate && bundle exec rake setup_sample_data"
  },
  "env": {
    "SECRET_KEY_BASE":{
      "generator": "secret"
    },
   "RACK_ENV": {
      "value": "staging"
    },
    "RAILS_ENV": {
      "value": "staging"
    },
    "AWS_ACCESS_KEY_ID": {
      "required": false
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": false
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "LOG_LEVEL": {
      "value": "DEBUG"
    }
  },
  "formation": { },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "12"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}